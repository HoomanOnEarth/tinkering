{
  "name": "personal",
  "engines": {
    "node": ">=14",
    "pnpm": ">=3"
  },
  "scripts": {
    "get-stats": "ts-node scripts/get-stats",
    "build": "pnpm run build -r",
    "lint": "eslint --ignore-path .gitignore --ext ts,tsx .",
    "prettier": "prettier --ignore-path .gitignore --write '**/*/*.{ts,tsx,css,json,html}'"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "bracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 80,
    "proseWrap": "preserve",
    "quoteProps": "as-needed",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "devDependencies": {
    "prettier": "^2.5.1"
  }
}
